<div class="game-container">
    <div class="round-number">{{ round_number }}</div>
    <h3 class="container-title">Create a new question or prompt</h3> 
    <p class="center-text" v-if="!is_admin">Submit as many prompts as you like or ask the admin to go to the next stage!</p>
    <p class="center-text" v-else>Submit prompts or press Go to next stage to start answering!</p>
    <input type="text" class="form-control" v-model="new_prompt" placeholder="Enter new prompt" :disabled="new_prompt_submitted">
    
    <button @click="submitNewPrompt(new_prompt)" :disabled="new_prompt_submitted">Submit</button>

    <button @click="nextStage()" v-if="is_admin">Go to next stage</button>
</div>